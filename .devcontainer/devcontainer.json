// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/python
{
	"name": "Python 3",
	"image": "mcr.microsoft.com/devcontainers/python:1-3.13-bookworm",
	"features": {
		"ghcr.io/devcontainers/features/node:1": {},
		"ghcr.io/akhildevelops/devcontainer-features/apt:0": {
			"packages": "poppler-utils ocrmypdf"
		},
		"ghcr.io/devcontainers-extra/features/uv:1": {}
	},

	"runArgs": ["--add-host", "host.docker.internal:host-gateway"],

	"containerEnv": {
		"POST_PROCESS_DONT_SAVE": "True"
	},

	"initializeCommand": "mkdir -p plngx-dissect-frontend/dist",

	"postCreateCommand": ".devcontainer/post-create.sh",

	"postStartCommand": "git config --global --add safe.directory ${containerWorkspaceFolder}",
	
	"mounts": [
		"type=bind,source=${localEnv:HOME}/.cache/uv,target=/home/vscode/.cache/uv",
		"type=bind,source=${localEnv:HOME}/.npm,target=/home/vscode/.npm"
	],

	"customizations": {
		"vscode": {
			"extensions": [
				"ms-python.python",
				"ms-python.vscode-pylance",
				"p403n1x87.austin-vscode"
			]
		  }
	},
	"portsAttributes": {
		"5173": {
			"label": "vite dev (Frontend)"
		},
		"8000": {
			"label": "uvicorn (Backend)"
		}
	}
}
